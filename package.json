{
    "name":             "dbpf",
    "author":           "anonhostpi",
    "license":          "MIT",
    "version":          "1.0.0",
    "description":      "A library for reading and writing DBPF files.",
    
    "main":             "./dist/dbpf.js",
    "browser":          "./dist/dbpf.web.js",
    
    "scripts": {
        "clean":            "rimraf ./dist && mkdirp ./dist",

        "make:imports":     "node scripts/imports.js",
        "make:node":        "tsc --project ./tsconfig.json",
        "make:web":         "webpack --config webpack.config.js",
        "make:test":        "webpack --config webpack.test.config.js",

        "build":            "npm run make:node && npm run make:web",

        "build:web":        "npm run make:web",
        "build:test":       "npm run make:test && copyfiles -f ./dist/dbpf.web.js ./test/serve && copyfiles -f ./test/index.html ./test/serve",
        "build:node":       "npm run make:node",

        "prebuild":         "npm run clean && npm run make:imports",

        "prebuild:web":     "npm run make:imports",
        "prebuild:test":    "npm run build:web",
        "prebuild:node":    "npm run make:imports",
        
        "test":             "npm run build:test && npm run test:serve",
        "test:serve":       "cd ./test/serve && live-server --port=8080 --open=./index.html",

        "prepack":          "npm run build && npm run prepack:man",
        "prepack:man":      "node scripts/manifest.js",

        "postpack":         "npm run postpack:man",
        "postpack:man":     "node scripts/manifest.js --restore",

        "prepublishOnly":   "rimraf ./scripts/manifest"
    },

    "devDependencies": {
        "@types/node": "^22.3.0",
        "copyfiles": "^2.4.1",
        "live-server": "^1.2.2",
        "mkdirp": "^3.0.1",
        "rimraf": "^6.0.1",
        "ts-loader": "^9.5.1",
        "tslib": "^2.4.0",
        "typescript": "~5.4.5",
        "webpack": "^5.93.0",
        "webpack-cli": "^5.1.4"
    },
    "dependencies": {
        "buffer": "^6.0.3",
        "process": "^0.11.10"
    }
}
